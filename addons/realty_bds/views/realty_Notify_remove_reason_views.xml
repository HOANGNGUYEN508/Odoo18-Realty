<odoo>
	<!-- List View -->
	<record id="remove_reason_tree" model="ir.ui.view">
		<field name="name">Remove Reason List</field>
		<field name="model">remove_reason</field>
		<field name="arch" type="xml">
			<list>
				<field name="name"/>
				<field name="for_type"/>
			</list>
		</field>
	</record>

	<!-- Form View -->
	<record id="remove_reason_form" model="ir.ui.view">
		<field name="name">Remove Reason Form</field>
		<field name="model">remove_reason</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field id="remove_reason_name" name="name" placeholder="Enter a name" autocomplete="off"/>
						<field id="remove_reason_type" name="for_type" widget="selection"/>
					</group>
				</sheet>
				<chatter/>
			</form>
		</field>
	</record>

	<!-- Action -->
	<record id="action_remove_reason" model="ir.actions.act_window">
		<field name="name">Removal Reason</field>
		<field name="res_model">remove_reason</field>
		<field name="view_mode">list,form</field>
	</record>
</odoo>