<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View Inherit -->
    <record id="view_company_list_inherit" model="ir.ui.view">
        <field name="name">res.company.list.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_tree"/>
    </record>

    <!-- Form View Inherit -->
    <record id="view_company_form_inherit" model="ir.ui.view">
        <field name="name">res.company.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <!-- Replace the address fields in the company. -->
            <xpath expr="//div[@class='o_address_format']" position="after">
                <div class="row">
                    <div class="col-md-4">
                        <field name="province_id" placeholder="Province" options="{'no_create': True}" domain="[('country_id.code', '=', 'VN')]"/>
                    </div>
                    <div class="col-md-4">
                        <field name="district_id" placeholder="District" options="{'no_create': True}" domain="[('province_id', '=', province_id)]"/>
                    </div>
                    <div class="col-md-4">
                        <field name="commune_id" placeholder="Commune" options="{'no_create': True}" domain="[('district_id', '=', district_id)]"/>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@class='o_address_format']//field[@name='country_id']" position="attributes">
                <attribute name="style">display: none;</attribute>
            </xpath>
            <xpath expr="//div[@class='o_address_format']//field[@name='street']" position="attributes">
                <attribute name="style">display: none;</attribute>
            </xpath>
            <xpath expr="//div[@class='o_address_format']//field[@name='street2']" position="attributes">
                <attribute name="style">display: none;</attribute>
            </xpath>
            <xpath expr="//div[@class='o_address_format']//field[@name='city']" position="attributes">
                <attribute name="style">display: none;</attribute>
            </xpath>
            <xpath expr="//div[@class='o_address_format']//field[@name='state_id']" position="attributes">
                <attribute name="style">display: none;</attribute>
            </xpath>
            <xpath expr="//div[@class='o_address_format']//field[@name='zip']" position="attributes">
                <attribute name="style">display: none;</attribute>
            </xpath>
            <xpath expr="//group//group//field[@name='vat']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <!-- Action-->
    <record id="action_res_company" model="ir.actions.act_window">
        <field name="name">Company</field>
        <field name="res_model">res.company</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>