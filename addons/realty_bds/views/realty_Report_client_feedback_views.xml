<odoo>
    <!-- List View -->
    <record id="client_feedback_tree" model="ir.ui.view">
        <field name="name">Client Feedback List</field>
        <field name="model">client_feedback</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="client_feedback_form" model="ir.ui.view">
        <field name="name">Client Feedback Form</field>
        <field name="model">client_feedback</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field id="client_feedback_name" name="name" placeholder="Enter a name" autocomplete="off"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_client_feedback" model="ir.actions.act_window">
        <field name="name">Client Feedback</field>
        <field name="res_model">client_feedback</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>