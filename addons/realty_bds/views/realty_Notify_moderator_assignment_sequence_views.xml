<odoo>
	<!-- List View -->
	<record id="moderator_assignment_sequencee_tree" model="ir.ui.view">
		<field name="name">Moderator Assignment Sequence List</field>
		<field name="model">moderator_assignment_sequence</field>
		<field name="arch" type="xml">
			<list>
				<field name="model_name"/>
				<field name="company_id"/>
				<field name="group_id"/>
				<field name="last_assigned_user_id"/>
				<field name="assignment_count"/>
			</list>
		</field>
	</record>

	<!-- Form View -->
	<record id="moderator_assignment_sequence_form" model="ir.ui.view">
		<field name="name">Moderator Assignment Sequence Form</field>
		<field name="model">moderator_assignment_sequence</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="model_name" autocomplete="off" readonly="1"/>
						<field name="company_id" widget="selection" autocomplete="off" readonly="1"/>
						<field name="group_id" widget="selection" autocomplete="off" readonly="1"/>
						<field name="last_assigned_user_id" widget="selection" autocomplete="off" readonly="1"/>
						<field name="assignment_count" autocomplete="off" readonly="1"/>
					</group>
				</sheet>
				<chatter/>
			</form>
		</field>
	</record>

	<!-- Action -->
	<record id="action_moderator_assignment_sequence" model="ir.actions.act_window">
		<field name="name">Moderator Assignment Sequence</field>
		<field name="res_model">moderator_assignment_sequence</field>
		<field name="view_mode">list,form</field>
		<field name="context">{'create': False}</field>
	</record>
</odoo>