	<!-- Moderator Menu -->
	<record id="action_urgent_buying_mod" model="ir.actions.act_window">
		<field name="name">Urgent Buying Post Queue</field>
		<field name="res_model">urgent_buying</field>
		<field name="view_mode">kanban</field>
		<field name="view_ids" eval="[
      (5, 0, 0),
      (0, 0, {
        'view_mode': 'kanban',
        'view_id': ref('realty_bds.urgent_buying_kanban_view_mod')
      })
    ]"/>
		<field name="domain">[('approval', '=', 'pending')]</field>
		<field name="context">{'create': False, 'show_guideline_button': True}</field>
