<odoo>
	<!-- List View -->
	<record id="reasons_buy_tree" model="ir.ui.view">
		<field name="name">reasons_buy_list</field>
		<field name="model">reasons_buy</field>
		<field name="arch" type="xml">
			<list>
				<field name="name"/>
			</list>
		</field>
	</record>

	<!-- Form View -->
	<record id="reasons_buy_form" model="ir.ui.view">
		<field name="name">reasons_buy_form</field>
		<field name="model">reasons_buy</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field id="reasons_buy_name" name="name" placeholder="Enter a name" autocomplete="off"/>
					</group>
				</sheet>
				<chatter/>
			</form>
		</field>
	</record>

	<!-- Action -->
	<record id="action_reasons_buy" model="ir.actions.act_window">
		<field name="name">Reasons for buying</field>
		<field name="res_model">reasons_buy</field>
		<field name="view_mode">list,form</field>
	</record>
</odoo>





