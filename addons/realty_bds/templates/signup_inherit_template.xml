<odoo>
	<template id="auth_signup_form_enctype" inherit_id="auth_signup.signup">
		<xpath expr="//form[@class='oe_signup_form']" position="attributes">
			<attribute name="enctype">multipart/form-data</attribute>
		</xpath>
	</template>

	<template id="auth_signup_fields" inherit_id="auth_signup.fields">
		<xpath expr="//div[hasclass('mb-3') and hasclass('field-confirm_password')]" position="after">
			<div class="signup-container">

				<!-- CCCD -->
				<div class="mb-3">
					<label for="citizen_id" class="form-label">Citizen ID</label>
					<input id="citizen_id" type="text" name="citizen_id" required="1" class="form-control"/>
				</div>

				<!-- Phone -->
				<div class="mb-3">
					<label for="phone" class="form-label">Phone</label>
					<input id="phone" type="text" name="phone" required="1" class="form-control"/>
				</div>

				<!-- Hometown -->
				<div class="hometown">
					<h4>Present Address</h4>
					<div class="mb-3">
						<label for="province_id" class="form-label">Province</label>
						<select id="province_id" name="province_id" class="form-control" required="1">
							<t t-foreach="request.env['res.country.state'].sudo().search([('country_id.code', '=', 'VN')])" t-as="prov">
								<option t-att-value="prov.id">
									<t t-esc="prov.name"/>
								</option>
							</t>
						</select>
					</div>

					<div class="mb-3">
						<label for="district_id" class="form-label">District</label>
						<select id="district_id" name="district_id" class="form-control" required="1">
							<option value="">Select District</option>
						</select>
					</div>

					<div class="mb-3">
						<label for="commune_id" class="form-label">Commune</label>
						<select id="commune_id" name="commune_id" class="form-control" required="1">
							<option value="">Select Commune</option>
						</select>
					</div>
				</div>

				<!-- Permanent Address -->
				<div class="permanent_address">
					<h4>Permanent Address</h4>
					<div class="mb-3">
						<label for="province_resident_id" class="form-label">Province</label>
						<select id="province_resident_id" name="province_resident_id" class="form-control" required="1">
							<t t-foreach="request.env['res.country.state'].sudo().search([('country_id.code', '=', 'VN')])" t-as="prov" t-key="prov">
								<option t-att-value="prov.id">
									<t t-esc="prov.name"/>
								</option>
							</t>
						</select>
					</div>

					<div class="mb-3">
						<label for="district_resident_id" class="form-label">District</label>
						<select id="district_resident_id" name="district_resident_id" class="form-control" required="1">
							<option value="">Select District</option>
						</select>
					</div>

					<div class="mb-3">
						<label for="commune_resident_id" class="form-label">Commune</label>
						<select id="commune_resident_id" name="commune_resident_id" class="form-control" required="1">
							<option value="">Select Commune</option>
						</select>
					</div>
				</div>
			</div>

			<div class="company_signup">
				<h4>Company</h4>
				<div class="mb-3">
					<label for="signup_company_id" class="form-label">Which Company Do You Signup for?</label>
					<select id="signup_company_id" name="signup_company_id" class="form-control" required="1">
						<t t-foreach="request.env['res.company'].sudo().search([])" t-as="comp" t-key="comp">
							<option t-att-value="comp.id">
								<t t-esc="comp.name"/>
							</option>
						</t>
					</select>
				</div>
			</div>

			<div class="mb-3">
				<label for="file_upload_component" class="form-label">Identity Documents (Max 5 files)</label>
				<div id="file_upload_component">
					<input type="file" id="identity_documents" name="identity_documents" multiple="multiple" accept=".pdf,.jpg,.jpeg,.png,.webp,.doc,.docx" class="form-control d-none"/>

					<div class="file-upload-area border rounded p-4 text-center">
						<i class="fa fa-cloud-upload fa-3x mb-3 text-muted"></i>
						<p class="mb-2">Click to upload or drag and drop</p>
						<small class="text-muted">PDF, Images, Word Documents (Max 10MB each, up to 5 files)</small>
					</div>

					<div id="file_list" class="mt-3"></div>
					<div id="file_errors" class="text-danger mt-2 d-none"></div>
				</div>
			</div>
		</xpath>
	</template>
</odoo>