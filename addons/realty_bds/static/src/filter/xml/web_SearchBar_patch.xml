<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
	<t t-name="web.SearchBar" t-inherit="web.SearchBar" t-inherit-mode="extension">
		<xpath expr="//div[contains(@class, 'o_cp_searchview')]" position="attributes">
			<attribute name="t-if">visibilityState.showSearchBar &amp; env.searchModel.resModel != 'product.template'</attribute>
		</xpath>
	</t>
</templates>