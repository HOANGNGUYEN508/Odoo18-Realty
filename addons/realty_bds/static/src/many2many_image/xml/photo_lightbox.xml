<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
	<t t-name="realty_bds.PhotoLightbox">
		<div class="lightbox-backdrop" t-on-click="close">
			<div class="lightbox-content" t-on-click.stop="() =&gt; {}">
				<t t-if="state.loading">
					<div class="spinner-overlay">
						<i class="fa fa-spinner fa-pulse fa-3x" aria-label="Loadingâ€¦"/>
					</div>
				</t>
				<div class="lightbox-header">
					<t t-if="props.presentationImage">
						<i t-att-class="'presentation-icon ' + (isPresentation ? 'fa fa-star' : 'fa fa-star-o')" t-on-click.stop="togglePresentation" data-tooltip="Set as presentation" />
					</t>

					<t t-if="!state.loading">
						<span class="file-name" t-esc="currentFile?.name"/>
					</t>
					<div class="controls">
						<a t-att-class="'btn btn-download ' + (!state.loading ? '' : 'disabled-link')" t-att-href="state.loading ? null : currentFile.url" t-att-download="state.loading ? null : currentFile.name" data-tooltip="Download image" target="_blank">
							<i class="icon fa fa-download"/>
						</a>
						<button t-if="!props.readonly" class="btn btn-delete" t-on-click.stop="deleteCurrent" data-tooltip="Delete image" t-att-disabled="state.loading">
							<i class="fa fa-trash trash-icon"/>
						</button>
						<button class="btn btn-close" t-on-click.stop="close">
							<i class="fa fa-times"/>
						</button>
					</div>
				</div>
				<div class="lightbox-image-container">
					<t t-if="props.files.length &gt; 1">
						<button class="nav prev" t-on-click="prev" t-att-disabled="state.loading">&#10094;</button>
					</t>
					<t t-if="currentFile">
						<!-- Display image if it's an image file -->
						<t t-if="isImage">
							<img t-att-src="displayUrl" t-att-alt="currentFile.name" t-on-load="onImageLoad" t-att-class="!state.loading ? '' : 'o_hidden'" />
						</t>
						<!-- Display file icon if it's not an image -->
						<t t-else="">
							<div class="lightbox-file-preview" t-on-load="onImageLoad">
								<img t-att-src="displayUrl" t-att-alt="currentFile.name" class="lightbox-file-icon" t-on-load="onImageLoad" />
								<div class="lightbox-file-info">
									<div class="lightbox-file-name" t-esc="currentFile.name"/>
									<div class="lightbox-file-hint">Click download to open this file</div>
								</div>
							</div>
						</t>
					</t>
					<t t-if="props.files.length &gt; 1">
						<button class="nav next" t-on-click="next" t-att-disabled="state.loading">&#10095;</button>
					</t>
				</div>
			</div>
		</div>
	</t>
</templates>